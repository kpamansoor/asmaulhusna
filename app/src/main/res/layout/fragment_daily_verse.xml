<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mansoor.asmaulhusna.fragments.DailyVerseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical">

        <include
            android:id="@+id/idItemBlocks"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="5dp"
            layout="@layout/daily_verse_main_item"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            >
            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No more history available."
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/boarder_curved_blank"
                android:fontFamily="sans-serif-condensed"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
