<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mansoor.asmaulhusna.fragments.NameDetailsFragment">

    <LinearLayout
        android:id="@+id/topSlide"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="8dp"
        android:background="@drawable/masjid"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_layout">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="helloccc" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_english"
        android:layout_below="@+id/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/dialog_holo_light_frame">
        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/material_blue"/>
        <TextView
            android:id="@+id/english"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="helloccc" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/dialog_holo_light_frame">
        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/benefits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="helloccc\nhdhdhdhdgdhgdgdgd" />
    </LinearLayout>

</RelativeLayout>
