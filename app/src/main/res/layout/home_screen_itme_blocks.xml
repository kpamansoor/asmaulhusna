<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_height="80dp"
                android:background="@color/material_orange">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/allah_white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asmaul Husna"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_blue"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_dashboard_white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quote Board"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_green"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_book_white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verse of the day"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_lime"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/dua_white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duas supplications"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_red"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_teach_white"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Lectures"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_indigo"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_share"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Names"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_purple"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_share"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Names"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:elevation="4dp"
                android:gravity="center"
                android:background="@color/material_grey"
                android:padding="5dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_share"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Names"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
